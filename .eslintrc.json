{
  "extends": "eslint:recommended",
  "plugins": [
    "standard",
    "promise"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-control-regex": "off",
    "no-loss-of-precision": "off",
    "no-nonoctal-decimal-escape": "off",
    "no-unsafe-optional-chaining": "off",
    "no-useless-backreference": "off"
  },
  "globals": {
    "localStorage": true
  }
}