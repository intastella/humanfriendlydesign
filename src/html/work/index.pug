      .tmpl-project__tags
        span.tmpl-project__tag-item #UX
        span.tmpl-project__tag-item #Design System
        span.tmpl-project__tag-item #Marketing

  .tmpl-project-row
    a.tmpl-project(href="/work/twilio-chat-widget/")
      picture.tmpl-project__thumbnail
        source(media="(min-width: 600px)", srcset="/img/Thumbnails/Twilio_Large.png, /img/Thumbnails/Twilio_Large@2x.png 2x")
        source(media="(min-width: 430px)", srcset="/img/Thumbnails/Twilio_Medium.png, /img/Thumbnails/Twilio_Medium@2x.png 2x")
        source(srcset="/img/Thumbnails/Twilio_Small.png, /img/Thumbnails/Twilio_Small@2x.png 2x")
        img(src="/img/Thumbnails/Twilio_Large.png" alt="Twilio Chat Widget Screens")
